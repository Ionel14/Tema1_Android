<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:color="@color/black">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF008080"
                android:endColor="#FF00FFFF"
                android:type="linear"
                android:angle="270" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/blue">
        <shape android:shape="rectangle">
            <solid android:color="#FF008080" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="@color/black">
        <shape android:shape="rectangle">
            <solid android:color="#FFD3D3D3" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>